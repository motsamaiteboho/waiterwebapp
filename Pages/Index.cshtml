@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="m-4"  class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
<div class="mb-4 text-center"  class="vh-100 bg-image"
  style="background-image: url('images/hotel-waiter.jpg');width:100%;height:300px; background-repeat: none" >
    <h1 class="display-4 mt-10 text-primary text-uppercase">Waiter availability Management</h1>
</div>
<form method="post" enctype="multipart/form-data">
    <div class="text-center">
        <!-- Email input -->
  <div class="form-outline" >
    <input type="text" id="form2Example1" asp-for="user.username" class="form-control w-25 mx-auto" />
    <label class="form-label" for="form2Example1">Username</label>
  </div>

  <!-- Password input -->
  <div class="form-outline">
    <input type="password" id="form2Example2"  asp-for="user.password" class="form-control w-25  mx-auto" text-align: center/>
    <label class="form-label" for="form2Example2">Password</label>
  </div>
    </div>
  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-30">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31"> Remember me </label>
      </div>
    </div>

    <div class="col">
      <!-- Simple link -->
      <a href="#!">Forgot password?</a>
    </div>
  </div>

  <div class="text-center mt-4">
    <!-- Submit button -->
    <button asp-page-handler="SignIn" class="btn btn-primary btn-block mb-4">Sign in</button>
  </div>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Not a member? <a href="./Registration" >Register</a> </p>
    <p>or sign up with:</p>
    <button type="button" class="btn btn-link btn-floating mx-1">
      <i class="bi bi-facebook"></i>
    </button>

    <button type="button" class="btn btn-link btn-floating mx-1">
      <i class="bi bi-google"></i>
    </button>
    
    <button type="button" class="btn btn-link btn-floating mx-1">
      <i class="fab fa-github"></i>
    </button>
  </div>
  <div class=" t-4" >
      @if(!string.IsNullOrEmpty(Model.FeedBackMessage))
        {
            @if(Model.FeedBackMessage.Contains("fields"))
            {
                <div class="alert alert-warning alert-dismissible fade show mt-4 text-center">
                    <strong>@Model.FeedBackMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            else if(Model.FeedBackMessage.Contains("password"))
            {
                <div class="alert alert-danger  alert-dismissible fade show mt-4 text-center">
                    <strong>@Model.FeedBackMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        }
   </div>
</form>
</div>
