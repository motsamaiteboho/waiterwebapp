@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
     <div class="m-2">
        <h1 class="display-4 text-uppercase">Waiter availability Management</h1>
        <img src="images/hotel-waiter.jpg" class="img-fluid" style="width:900px;height:300px"/>
    </div>
     <form  method="post" enctype="multipart/form-data">
        
        @* <div asp-validation-summary="All" class="text text-danger"></div> *@
        <div class="mb-3 form-group d-flex align-items-center justify-content-center">
            <div class="me-4">
                <label class="form-label" >UserName</label>
            </div>
            <input type="text" asp-for="waiter.Name" placeholder="enter your username" class="form-control" />
            <div>
                <span asp-validation-for="waiter.Name" class="text text-danger"></span>
            </div>
        </div>

        <div class="row mt-5">
            <div>Select the working days: </div>
            @foreach (var shiftday in Model.ShiftDays)
            {
                <div class="col-3 form-group m-3">
                    <input type="checkbox"  name="SelectedShiftDays"  value="@shiftday" class="ml-4" />   @shiftday<br />
                </div>
            }
        </div>

        <div class="d-flex mt-5 justify-content-around">
            <div>
                <button asp-page-handler="update" class="btn btn-warning">Update working days</button>
            </div>
            <div>
                <button asp-page-handler="Add" type="submit" class="btn btn-success float-right">Add working days</button>
            </div>
             <div>
                <button asp-page-handler="stats"  class="btn btn-info">View Weekly stats</button>
            </div>
        </div>

        <div class=" t-4">
            @if(!string.IsNullOrEmpty(Model.FeedBackMessage))
            {
                @if(Model.FeedBackMessage.Contains("filled"))
                {
                    <div class="alert alert-warning alert-dismissible fade show mt-4">
                        <strong>@Model.FeedBackMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                else if(Model.FeedBackMessage.Contains("select"))
                {
                    <div class="alert alert-danger  alert-dismissible fade show mt-4">
                        <strong>@Model.FeedBackMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                else
                {
                    <div class="alert alert-success  alert-dismissible fade show mt-4">
                        <strong>@Model.FeedBackMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            }
        </div>
    </form>
</div>