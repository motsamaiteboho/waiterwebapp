@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4 text-uppercase">Waiter availability Management</h1>
    
     <form  method="post" enctype="multipart/form-data">
        
        @* <div asp-validation-summary="All" class="text text-danger"></div> *@
        <div class="mb-3 form-group d-flex align-items-center justify-content-center">
            <div class="me-4">
                <label class="form-label" >Name</label>
            </div>
            <input type="text" asp-for="waiter.Name" placeholder="enter your name" class="form-control" />
        </div>

        <div class="row mt-5">
            <div>Select the working days: </div>
            @foreach (var shiftday in Model.ShiftDays)
            {
                <div class="col-3 form-group m-3">
                    <input type="checkbox"  name="SelectedShiftDays"  value="@shiftday" class="ml-4" />   @shiftday<br />
                </div>
            }
        </div>
        <div class="d-flex mt-5 justify-content-around">
            <div>
                <button asp-page-handler="update" class="btn btn-warning">Update working days</button>
            </div>
            <div>
                <button asp-page-handler="Add" type="submit" class="btn btn-success float-right">Add working days</button>
            </div>

             <div>
                <button asp-page-handler="stats"  class="btn btn-info">View Weekly stats</button>
            </div>
        </div>
    </form>
</div>